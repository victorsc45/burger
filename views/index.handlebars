<div class="container">
    <div class="jumbotron">
        <h1>Devour some Burgers!</h1>
        <p>Make the Burgers. Eat the Burgers?</p>
        <h2>Make your own Burger</h2>
    </div>
    <panel>
        <form class="create-form">
            <div class="form-group">
                <label for="newburger">Make your own Burger</label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <span class="fa fa-thumbs-up"></span>
                </button>
            </div>
        </form>
    </panel>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                    {{/unless}}
                    {{/each}}


                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="rightside"><strong>Devour Your Burger</strong></div>
            <div class="panel-body">
                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>
                    {{/if}}
                    {{/each}}


                </ul>
            </div>
        </div>
    </div>
</div>