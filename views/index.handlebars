{{!-- this container for handlebars pulling data from the database and responding to user request --}}
<div class="container">
    <div class="jumbotron">
        <h1>Devour some Burgers!</h1>
        <img src="/assets/img/burger.png" alt="Burger" width="160px" class=" center">
        <p>Check out our Awesome Burgers! Devour a Burger!</p>
        <h2>Make your own Burger: Yum!</h2>
    </div>
    <panel>
        <form class="create-form">
            <div class="form-group">
                <label for="newburger">Make your own Burger</label>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <span class="fa fa-credit-card"></span>
                </button>
            </div>
        </form>
    </panel>
</div>
<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong></div>
            <div class="panel-body">
                <ul>
                    {{!-- for each loop through the table burgers returning burger unless it has been devoured --}}
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li>
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="devour-burger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span> Devour It!</button>
                    </li>
                    {{/unless}}
                    {{/each}}


                </ul>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-default">
            <div class="panel-heading" id="rightside"><strong>Devour Your Burger</strong></div>
            <div class="panel-body">
                <ul>
                    {{!-- for each loop though the database table burgers and returning burgers if devoured is true --}}
                    {{#each burgers}}
                    {{#if devoured}}
                    <li>
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="delete-burger btn btn-danger" id="trashbutton"
                            data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-hand-spock-o"></span>
                            Clean your trash</button>
                    </li>
                    {{/if}}
                    {{/each}}


                </ul>
            </div>
        </div>
    </div>
</div>